{% extends 'base.html.twig' %}

{% block title %}Types{% endblock %}
{% block monTitre %}Liste de tous les types{% endblock %}
{% block body %}
<div class="container row" style="margin:auto">
    {% for type in types %}
    <div class="col-6">
        <div class="row">
            <div class="col-6 col-md-4 col-lg-2 m-5">
                <img class="perso_imgAliment" src="{{ asset('images/types/' ~ type.image)}}">
            </div>
            <div class="col align-self-center m-5">
                <a href="" style="text-decoration: none;">{{type.libelle}}  </a>                          
            </div>
        </div>
    </div>
    {% endfor %}
</div>

{% endblock %}
